doctype html

html
  head
    meta(charset='UTF-8')
    title Sales Tool (Inject)
    style.
      html, body {
        background-color: #fff;
      }
      html::-webkit-scrollbar {
        width: 5px;
      }
      html::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 5px;
      }
      html::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 5px;
      }
      html::-webkit-scrollbar-thumb:hover {
        background: #555;
      }
  body
  #root
  if env !== 'prod'
    script(src='chrome-extension://lmhkpmbekcpmknklioeibfkpmmfibljd/js/redux-devtools-extension.js')
  script(src=env == 'prod' ? '/js/sidebar.bundle.js' : 'http://localhost:3000/js/sidebar.bundle.js')
